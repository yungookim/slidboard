<s:SurfaceWindow x:Class="slidbaord.SurfaceWindow1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    Title="slidbaord">

    <Grid>
        
        
        
        <s:TagVisualizer 
            Name="MyTagVisualizer" 
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Background="#FF1C1C1C" 
            Height="Auto" Width="Auto"
            VisualizationAdded="OnVisualizationAdded" 
            VisualizationRemoved="OnVisualizationRemoved"
            FontFamily="SlidBoard">
            <s:TagVisualizer.Definitions>
                <s:TagVisualizationDefinition Value="0xC1" 
                                              Source="ObjectVisualization.xaml"
                                              LostTagTimeout="10000"
                                              MaxCount="1"
                                              OrientationOffsetFromTag="0"
                                              PhysicalCenterOffsetFromTag="0,-2"
                                              TagRemovedBehavior="Fade"
                                              UsesTagOrientation="True"
                                              />
                <s:TagVisualizationDefinition Source="ObjectVisualization.xaml"
                                              LostTagTimeout="2000"
                                              MaxCount="2"
                                              OrientationOffsetFromTag="0"
                                              PhysicalCenterOffsetFromTag="0,0"
                                              TagRemovedBehavior="Fade"
                                              UsesTagOrientation="True"
                                              />
            </s:TagVisualizer.Definitions>
        </s:TagVisualizer>

        <s:ScatterView Name="DirList" 
                       HorizontalAlignment="Stretch" 
                       VerticalAlignment="Stretch" 
                       HorizontalContentAlignment="Center" 
                       VerticalContentAlignment="Top">
            
            <s:ScatterViewItem Name="serverNotResondingDialog" Width="500" Height="500" Center="600,600" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18" CanScale="False" CanRotate="False" CanMove="False" Orientation="0" Visibility="Collapsed">
                <Label Content="Make sure the server is running!" Foreground="Red"></Label>
            </s:ScatterViewItem>
            
            <s:ScatterViewItem Name="ControlBox" 
                               Background="#007FFFD4" 
                               BorderThickness="0"
                               CanScale="False" 
                               Center="100,100" 
                               Orientation="0"
                               CanMove="False" OpacityMask="#00000000" BorderBrush="#FF060C0A" Foreground="#00F7F7F7">
                <s:SurfaceButton Name="CenterItems"
                          FontSize="14"
                          Margin="10,10,10,10"
                          Click="OnStack">Stack items
                </s:SurfaceButton>
            </s:ScatterViewItem>
        </s:ScatterView>
    </Grid>
</s:SurfaceWindow>
